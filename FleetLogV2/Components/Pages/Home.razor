@page "/"

<PageTitle>Home</PageTitle>

<AuthorizeView>
    <NotAuthorized>
        <Login />
    </NotAuthorized>
    <Authorized>
        @if (context.User.IsInRole("Admin"))
        {
            <h1 class="text-shadow">This is for admin</h1>
            <div class="container d-flex justify-content-sm-around mt-5">
                <NavLink class="nav-link fs-4" href="/managers">
                    <div style="width:300px; height:300px; cursor:pointer;" class="card justify-content-center text-center shadow pressed">
                        <h1 class="text-shadow">Show Managers</h1>
                    </div>
                </NavLink>
                <NavLink class="nav-link fs-4" href="/drivers">
                    <div style="width:300px; height:300px; cursor:pointer;" class="card justify-content-center text-center shadow pressed">
                        <h1 class="text-shadow">Show Drivers</h1>
                    </div>
                </NavLink>
                <NavLink class="nav-link fs-4" href="/events">
                    <div style="width:300px; height:300px; cursor:pointer;" class="card justify-content-center text-center shadow pressed">
                        <h1 class="text-shadow">Show activity</h1>
                    </div>
                </NavLink>
            </div>
        }
        else if (context.User.IsInRole("Employee"))
        {
            <h1 class="text-shadow">This is for manager</h1>
            <div class="container d-flex justify-content-sm-around mt-5">
            <NavLink class="nav-link fs-4" href="/drivers">
                <div style="width:300px; height:300px; cursor:pointer;" class="card justify-content-center text-center shadow pressed">
                    <h1 class="text-shadow">Show Drivers</h1>
                </div>
            </NavLink>
            <NavLink class="nav-link fs-4" href="/events">
                <div style="width:300px; height:300px; cursor:pointer;" class="card justify-content-center text-center shadow pressed">
                    <h1 class="text-shadow">Show activity</h1>
                </div>
            </NavLink>
            </div>
        }
    </Authorized>
</AuthorizeView>